<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    tools:context="by.madcat.development.f1newsreader.classesUI.WeekendInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <by.madcat.development.f1newsreader.styling.CustomViews.AGBengalyTextView
                android:id="@+id/weekend_title"
                style="@style/WeekendTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <ImageView
                android:id="@+id/weekend_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/autosport" />

            <by.madcat.development.f1newsreader.styling.CustomViews.PerfogramaTextView
                android:id="@+id/first_day_title"
                style="@style/WeekendDateStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="28 июля пятница" />

            <by.madcat.development.f1newsreader.styling.CustomViews.AGBengalyTextView
                android:id="@+id/first_day_text"
                style="@style/WeekendDayStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00 1st practice\n15:00 2nd practice" />

            <by.madcat.development.f1newsreader.styling.CustomViews.PerfogramaTextView
                android:id="@+id/second_day_title"
                style="@style/WeekendDateStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="28 июля пятница" />

            <by.madcat.development.f1newsreader.styling.CustomViews.AGBengalyTextView
                android:id="@+id/second_day_text"
                style="@style/WeekendDayStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00 1st practice\n15:00 2nd practice" />

            <by.madcat.development.f1newsreader.styling.CustomViews.PerfogramaTextView
                android:id="@+id/third_day_title"
                style="@style/WeekendDateStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="28 июля пятница" />

            <by.madcat.development.f1newsreader.styling.CustomViews.AGBengalyTextView
                android:id="@+id/third_day_text"
                style="@style/WeekendDayStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00 1st practice\n15:00 2nd practice" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
