<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/online_post_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <by.madcat.development.f1newsreader.styling.customViews.RobotoRegularTextView
                android:id="@+id/online_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DateTextSmallTitle"
                android:text="16:58:13" />

            <by.madcat.development.f1newsreader.styling.customViews.RobotoRegularTextView
                android:id="@+id/online_post_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/online_post_time"
                android:layout_margin="5dp"
                android:text="test text bla-bla-bla" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>