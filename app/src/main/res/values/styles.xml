<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">#9e9e9e</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#7986cb</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SettingsFragmentStyle">
        <item name="android:textColorSecondary">#9e9e9e</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@color/white</item>

        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="DateTextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#80888888</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="DateTextSmallTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="NewsHeaderImageText">
        <item name="android:background">#80888888</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ExpandedTextAppearance" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded.Shadow">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="CollapsedTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.Shadow" parent="@android:style/TextAppearance.Medium">
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="NewsPageToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
        <item name="android:background">@color/table_bg</item>
    </style>

    <style name="TimerTextStyleOverlayShadow">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="WeekendTitleStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WeekendDateStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="WeekendDayStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="PopupButtonStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
